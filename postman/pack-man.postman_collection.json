{
    "info": {
        "_postman_id": "pack-man-api-collection",
        "name": "Pack-Man API",
        "description": "Collection for testing the Pack-Man Dependency Analyzer API.\n\nThis API analyzes package dependencies from various package managers (npm, pip, pub) and returns version information including current version, latest version, and update status.\n\n## Base URL\n- Production: `https://pack-man.tech`\n- Local Development: `http://localhost:3000`\n\n## Authentication\nOptional GitHub token can be provided via Bearer token for enhanced rate limits and private repository access.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "https://pack-man.tech",
            "type": "string"
        },
        {
            "key": "githubToken",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "NPM Packages",
            "item": [
                {
                    "name": "Analyze NPM Dependencies",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"content\": \"{\\n  \\\"dependencies\\\": {\\n    \\\"axios\\\": \\\"^1.6.0\\\",\\n    \\\"react\\\": \\\"^18.2.0\\\",\\n    \\\"typescript\\\": \\\"^5.0.0\\\"\\n  }\\n}\",\n    \"fileName\": \"package.json\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/analyze-packages",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "analyze-packages"
                            ]
                        },
                        "description": "Analyzes npm dependencies from a package.json file content.\n\nReturns the current version, latest available version, and update status for each package."
                    },
                    "response": []
                },
